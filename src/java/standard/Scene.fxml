<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="root" alignment="TOP_RIGHT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="standard.Controller">
    <!-- Header -->
    <HBox>
        <HBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
        </HBox.margin>
        <VBox.margin>
            <Insets bottom="25.0" left="5.0" right="5.0" top="5.0" />
        </VBox.margin>
        <!-- Back button -->
        <HBox minWidth="395">
            <Button fx:id="backButton" style="-fx-font-size: 18px" minHeight="35" minWidth="115" onMouseClicked="#backButtonPressed" visible="false">
                Back
                <HBox.margin>
                    <Insets left="25.0" />
                </HBox.margin>
            </Button>
        </HBox>
        <!-- Dark mode button-->
        <HBox fx:id="buttonContainer" alignment="TOP_RIGHT" minWidth="370">
            <HBox.margin>
                <Insets right="25.0" />
            </HBox.margin>
        </HBox>
    </HBox>
    <!-- Body -->
    <StackPane minHeight="450">
        <!-- Main menu -->
        <VBox fx:id="menuVBox" alignment="CENTER" spacing="40">
            <!-- Buttons -->
            <HBox fx:id="textButtons" alignment="TOP_CENTER" maxHeight="50.0" maxWidth="-Infinity" spacing="10">
                <opaqueInsets>
                    <Insets />
                </opaqueInsets>
            </HBox>
            <!-- Inputs -->
            <VBox alignment="CENTER" spacing="20">
                <HBox alignment="CENTER" spacing="5">
                    <VBox alignment="CENTER" maxWidth="450" minWidth="450" spacing="2">
                        <Label style="-fx-font-size: 25">Address</Label>
                        <HBox fx:id="addressContainer" alignment="CENTER" spacing="2" />
                    </VBox>
                    <VBox fx:id="subnetParent" alignment="CENTER" maxWidth="100" minWidth="100" spacing="2">
                        <Label style="-fx-font-size: 25">Subnet</Label>
                        <HBox fx:id="subnetContainer" alignment="CENTER" spacing="2" />
                    </VBox>
                </HBox>
                <HBox alignment="CENTER" spacing="10">
                    <Label style="-fx-font-size: 25">Community</Label>
                    <TextField fx:id="communityField" maxHeight="40" maxWidth="200" minHeight="40" minWidth="200" style="-fx-font-size: 20">public</TextField>
                </HBox>
                <Button minWidth="400" onAction="#startSNMPProcess" style="-fx-font-size: 20; -fx-cursor: HAND">Next</Button>
            </VBox>
        </VBox>
        <!-- Scan interface -->
        <HBox fx:id="scanHBox" visible="false">
            <!-- Device list -->
            <VBox>
                <Label>Devices</Label>
                <ListView fx:id="deviceList" maxWidth="177" />
                <HBox.margin>
                    <Insets left="25.0" />
                </HBox.margin>
            </VBox>
            <!-- Property table -->
            <VBox>
                <Label>Properties</Label>
                <TableView fx:id="propertyTable" minWidth="545.0" styleClass="table-view">
                    <placeholder>
                        <Label style="-fx-font-size: 18px">No device selected</Label>
                    </placeholder>
                </TableView>
                <HBox.margin>
                    <Insets bottom="10.0" left="25.0" />
                </HBox.margin>
            </VBox>
        </HBox>
    </StackPane>
    <HBox fx:id="customOIDBox" alignment="CENTER_RIGHT" spacing="10" visible="false">
        <Label style="-fx-font-size: 18px">Custom OID or MIB:</Label>
        <TextField fx:id="customOIDInput" minWidth="270.0" style="-fx-font-size: 18px" />
        <Button style="-fx-font-size: 18px" onAction="#sendCustomRequest">Send</Button>
        <VBox.margin>
            <Insets right="25.0" top="18" />
        </VBox.margin>
    </HBox>

</VBox>
